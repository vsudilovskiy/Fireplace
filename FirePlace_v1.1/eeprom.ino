void saveEEPROM() {
    String fName = "[saveEEPROM]->";
    EEPROM.put(ARRAY_ADDR,vFireObject);
    commitEEPROM();
}
//------------------------------------------------------------------------------------------------------------------------------------------------------
void commitEEPROM() {
    String fName = "[commitEEPROM]->";
    
    if (EEPROM.commit()) {
        debug_print(fName+" EEPROM successfully committed");
    } else {
        debug_print(fName+" ERROR! EEPROM commit failed");
      }
}
