void setup_wifi() {
    String fName = "[setup_wifi]->";
    debug_print(fName+"Begin");
    delay(10);
    // We start by connecting to a WiFi network
    debug_print(fName+"Connecting to "+ssid);

    WiFi.mode(WIFI_STA);
    WiFi.begin(ssid, password);

    while (WiFi.status() != WL_CONNECTED) {
        delay(500);
        Serial.print(".");
      }

    randomSeed(micros());

    debug_print(fName+"WiFi connected");
    debug_print(fName+"IP address: ");
    debug_print(WiFi.localIP().toString());
    debug_print(fName+"End");
}
